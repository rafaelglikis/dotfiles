{
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 20,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "network",
        "bluetooth",
        "custom/temperature",
        "custom/memory",
        "battery",
        "backlight",
        "pulseaudio",
        "pulseaudio#microphone",
        "tray",
        "clock"
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "all-outputs": false,
        "show-special": true,
        "format-icons": {
            "1": "1:Home",
            "2": "2:Web",
            "3": "3:Dev",
            "4": "4:Cmd",
            "5": "5:Db",
            "6": "6:Chat",
            "7": "7:Notes"
        },
        "persistent_workspaces": {
            "*": 1
        }
    },
    "hyprland/window": {
        "format": "{}"
    },
    "custom/temperature": {
        "tooltip": true,
        "format": "Ôãâ {}",
        "interval": 30,
        "exec": "sensors | grep cpu | head -1 | awk '{print $2}'"
    },
    "custom/memory": {
        "tooltip": true,
        "format": "üß† {}",
        "interval": 30,
        "exec": "free | grep Mem | awk '{printf(\"%.0f%%\", ($3/$2) * 100.0)}'"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "interval": 60,
        "format": "{:%H:%M %d %b %Y}"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "brightnessctl -q set 1%+",
        "on-scroll-down": "brightnessctl -q set 1%-"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 40,
            "critical": 30
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 1",
        "on-scroll-down": "pamixer -d 1",
        "scroll-step": 100,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        }
    },
    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± ",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    "network": {
        "format-wifi": "Ôá´  {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr}",
        "tooltip-format": "{essid} - {ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },
    "bluetooth": {
        "format": "Ôäî {status}",
        "format-disabled": "",
        // an empty format will hide the module
        "format-connected": "Ôäî {num_connections}",
        "tooltip-format": "{device_alias}",
        "tooltip-format-connected": "Ôäî {device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}"
    }
}
